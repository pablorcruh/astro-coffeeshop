---
import '@/styles/global.css'
import Header from '@/components/ui/Header.astro'
import Footer from '@/components/ui/Footer.astro'


interface Props {
    title: string,
    subtitle: string,
    bgImage: string
}

const { title, subtitle, bgImage } = Astro.props

---
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Cafeteria desde 1939: {title}</title>
        <link rel="icon" type="image/svg+xml" href="/public/favicon.svg">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
    </head>
    <body class="bg-coffee-100">
       <Header
       subtitle={subtitle} 
       bgImage={bgImage}/>
            <main class="bg-white p-20 max-w-7xl mx-auto lg:-mt-20 relative">
                <slot/>
            </main>
            <slot name="after-main-contentt"/>
       <Footer/>
    </body>
</html>